<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView android:textSize="9.0pt" android:id="@id/choose" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="请选择运行模式：" />
    <RadioGroup android:id="@+id/radioGroup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="模式">
        <RadioButton android:id="@+id/radioHasSIM" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="免费号码" />
        <RadioButton android:id="@+id/radioNoSIM" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="全局广播" />
    </RadioGroup>
    <TextView android:textSize="9.0pt" android:id="@+id/tvResult" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="当前的运行模式为：免费号码" />
    <Button android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="保存" />
</android.support.constraint.ConstraintLayout>
